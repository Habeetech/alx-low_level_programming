#Include "main.h"

/**
 * reset_to_98 - takes a pointer to an int as parameters
 *and updates the value its points to
 * @i: initial value
 * @n: the parameters
 * Return: Always 0
 */

void reset_to_98(int i, int *n)
{
	int i = 402;
	int *n = &i;

	_putchar('i');

	reset_to_98(n);

	_putchar('n');

	return (0);
}

void reset_to_98(int *n)
{
	*n = 98;
}
